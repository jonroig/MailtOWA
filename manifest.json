{
  "name": "MailtOWA",
  "version": "1.0",
  "description": "Mailto links go directly Microsoft Office 365 Webmail / Outlook Web Application by default",
  "permissions": ["storage"],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [ {
    "all_frames": true,
    "js": [ "mailtowa.js" ],
    "matches": [ "\u003Call_urls>" ],
    "run_at": "document_end"
} ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "MailtOWA",
    "default_icon": {
      "16": "images/mail16.png",
      "32": "images/mail32.png",
      "48": "images/mail48.png",
      "128": "images/mail128.png"
    }
  },
  "icons": {
    "16": "images/mail16.png",
    "32": "images/mail32.png",
    "48": "images/mail48.png",
    "128": "images/mail128.png"
  },
  "manifest_version": 2
}
